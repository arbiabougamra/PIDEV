{% extends "@User/Page_admin.html.twig" %}
{% block body %}

    <div class="col-lg-20 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste Produit</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                Nom
                            </th>
                            <th>
                                Marque
                            </th>
                            <th>
                                Quantite
                            </th>
                            <th>
                                Categorie
                            </th>
                            <th>
                                Prix
                            </th>
                            <th>
                                image
                            </th>

                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for p in prod %}

                            <tr>
                                <td>
                                    {{ p.id }}
                                </td>
                                <td>
                                    {{ p.nom }}
                                </td>
                                <td>
                                    {{ p.marque }}
                                </td>
                                <td>
                                    {{ p.prix }}
                                </td>
                                <td>
                                    {{ p.getIdCategorie.getnom}}
                                </td>
                                <td>
                                    {{ p.quantite }}
                                </td>
                                <td>
                                    <img src="{{ asset('Upload/')}}{{ p.nomfile }}" width="100" class="img-circle" />
                                </td>
                                <td><a href="{{ path('produit_Supprimer',{'id':p.id}) }}">Supprimer</a><br><br>
                                    <a href="{{ path('produit_Modifier',{'id':p.id}) }}">Modifier</a>
                                </td>



                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}