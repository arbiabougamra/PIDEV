{% extends "@User/Page_admin.html.twig" %}
{% block body %}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste des types</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                Nom
                            </th>

                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in type %}

                            <tr>
                                <td>
                                    {{ c.id }}
                                </td>
                                <td>
                                    {{ c.nom }}
                                </td>
                                <td><a href="{{ path('Type_SupprimerType',{'id':c.id}) }}">Supprimer</a></td>



                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}