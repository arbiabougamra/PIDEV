{% extends "@User/Page_admin.html.twig" %}
{% block body %}

    <div class="col-lg-20 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste des Employees</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                Matricule
                            </th>
                            <th>
                                Nom
                            </th>
                            <th>
                                Prenom
                            </th>
                            <th>
                                Date de Naissance
                            </th>
                            <th>
                                Type
                            </th>

                            <th>
                                Image
                            </th>

                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for p in emp %}

                            <tr>
                                <td>
                                    {{ p.matricule }}
                                </td>
                                <td>
                                    {{ p.nom }}
                                </td>
                                <td>
                                    {{ p.prenom }}
                                </td>
                                <td>
                                    {{ p.dateNai|date }}
                                </td>
                                <td>
                                    {{ p.getIdType.getnom}}
                                </td>

                                <td>
                                    <img src="{{ asset('Upload/')}}{{ p.nomfile }}" width="100" class="img-circle" />
                                </td>
                                <td><a href="{{ path('Empoloyer_Supprimer',{'id':p.matricule}) }}">Supprimer</a><br><br>
                                    <a href="{{ path('Empoloyer_Modifier',{'id':p.matricule}) }}">Modifier</a>
                                </td>



                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}