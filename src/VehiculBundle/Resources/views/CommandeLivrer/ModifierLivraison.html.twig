{% extends "@User/Page_admin.html.twig" %}

{% block body %}

    {{ form_start(form) }}
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Affecter Livraison</h4>
                <p class="card-description">
                </p>
                <div class="form-group">
                    <label for="exampleInputName1">Adresse</label>
                    {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Date</label>
                    {{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Livreur</label>
                    {{ form_widget(form.id_Emp, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Vehicule</label>
                    {{ form_widget(form.id_veh, { 'attr': {'class': 'form-control'} }) }}

                </div>
            </div>

            <input type="submit" value="Envoyer" class=" btn btn-primary mr-2"/>
            {{ form_end(form) }}

        </div>
    </div>
    </div>


{% endblock %}
