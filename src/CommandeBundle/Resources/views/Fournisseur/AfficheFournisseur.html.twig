{% extends "@User/Page_admin.html.twig" %}
{% block body %}

    <div class="col-lg-20 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste Fournisseurs</h4>

                <div class="table-responsive pt-3">
                    <center>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                Nom
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Adresse
                            </th>
                            <th>
                                Tel
                       </th>

                            <th>
                                Action
                            </th>
                        </tr>
                    </center>
                        </thead>
                        <tbody>
                        {% for u in user %}
                        <tr>

                            {% for role in u.roles %}
                                {% if role == 'ROLE_FORNISSEUR' %}
                                    <td> {{ u.id }}</td>
                                    <td> {{ u.username }}</td>
                                    <td> {{ u.email }}</td>
                                    <td> {{ u.adresse }}</td>
                                    <td> {{ u.Tel }}</td>
                                    <td> <a class="btn btn-danger a-btn-slide-text" href="{{ path('deleteFourniseeur',{'id':u.id}) }}">
                                            <span class="fa fa-minus-circle" aria-hidden="true"></span>
                                            <span><strong>supprimer</strong></span></a><br><br>
                                        <a class="btn btn-success a-btn-slide-text" href="{{ path('UpdateFourniseeur',{'id':u.id}) }}">
                                            <span class="fa fa-edit" aria-hidden="true"></span>
                                            <span><strong>Modifier</strong></span></a><br><br>
                                        <a class="btn btn-dark a-btn-slide-text" href="{{ path('Affecter',{'id':u.id}) }}">
                                            <span class="fa fa-archive" aria-hidden="true"></span>
                                            <span><strong>Affecter commande</strong></span></a>
                                    </td>

                                {% else %}
                                {% endif %}

                            {% endfor %}


                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}