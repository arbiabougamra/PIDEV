{% extends "@User/Page_admin.html.twig" %}
{% block body %}
 {{ form_start(form) }}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ajouter Fournisseur</h4>
            <p class="card-description">
            </p>
            <div class="form-group">
                <label for="exampleInputName1">Username</label>
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Email</label>
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <label for="exampleInputName1">Adresse</label>
            {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} }) }}
        </div>
            <div class="form-group">
                <label for="exampleInputName1">Telephone</label>
                {{ form_widget(form.Tel, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                <label for="exampleInputPassword4">Password</label>
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                <label for="exampleInputPassword4"> Confirmer Password</label>
                {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <input type="submit" value="Envoyer" class=" btn btn-primary mr-2"/>
            {{ form_end(form) }}

</div>
    </div>


{% endblock %}


